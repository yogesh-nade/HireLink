</head>

   <body class="bg02">
     <div class="container">
       <div class="row">
         <div class="col-12">
           <nav class="navbar navbar-expand-xl navbar-light bg-light">
             <img src="Images/IIIT_Surat_Logo.jpg" alt=""  width="70" height="70">
             <h1 class="tm-site-title mb-0">IIITSurat</h1>
        
             <button
               class="navbar-toggler ml-auto mr-0"
               type="button"
               data-toggle="collapse"
               data-target="#navbarSupportedContent"
               aria-controls="navbarSupportedContent"
               aria-expanded="false"
               aria-label="Toggle navigation"
             >
               <span class="navbar-toggler-icon"></span>
             </button>
 
             <div class="collapse navbar-collapse" id="navbarSupportedContent">
               <ul class="navbar-nav mx-auto">
                 <li class="nav-item">
                   <a class="nav-link" href="/admin/home?id=<%= user._id %>"
                     >Dashboard
                     <span class="sr-only">(current)</span>
                   </a>
                 </li>
 
                 <li class="nav-item active">
                   <a class="nav-link" href="/admin/companyList?id=<%= user._id %>">Companys</a>
                 </li>
                 <li class="nav-item">
                   <a class="nav-link" href="/admin/usersList?id=<%= user._id %>">Student</a>
                 </li>
 
                 <li class="nav-item">
                   <a class="nav-link" href="/admin/profile?id=<%= user._id %>">Profile</a>
                 </li>
               </ul>
               <ul class="navbar-nav">
                 <li class="nav-item">
                   <a class="nav-link d-flex" href="/admin/logout">
                     <i class="far fa-user mr-2 tm-logout-icon"></i>
                     <span>Logout</span>
                   </a>
                 </li>
               </ul>
             </div>
           </nav>
         </div>
       </div>
       <!-- row -->
       <div style="margin-top: 68px;">
           <div class="bg-white tm-block">
             <div class="row">
               <div class="col-12">
                 <h2 class="tm-block-title d-inline-block" style="font-weight: 900;font-size:25px;">Add Company</h2>
               </div>
             </div>
             <div class="row mt-4 tm-edit-product-row">
               <div class="col-xl-7 col-lg-7 col-md-12">
                  
                 <form action="" method="post" enctype="multipart/form-data" class="tm-edit-product-form">
                   <div class="input-group mb-3">
                     <label
                       for="name"
                       class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label"
                        style="font-weight: 800;">Company Name
                     </label>
                     <input
                       id="name"
                       name="name"
                       type="text"
                       class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7"
                     />
                   </div>
                   <div class="input-group mb-3">
                     <label
                       for="name"
                       class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label"
                        style="font-weight: 800;">Company ID
                     </label>
                     <input
                       id="name"
                       name="companyId"
                       type="text"
                       class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7"
                     /></div>
                   <div class="input-group mb-3">
                     <label
                       for="description"
                       class="col-xl-4 col-lg-4 col-md-4 col-sm-5 mb-2"
                       style="font-weight: 800;">Description</label
                     >
                     <textarea
                       class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7"
                       rows="3"
                       required
                       name="description"
                     ></textarea>
                   </div>
                   <div class="input-group mb-3">
                     <label
                       for="category"
                       class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label"
                       style="font-weight: 800;">Branch</label
                     >
                     <select
                       class="custom-select col-xl-9 col-lg-8 col-md-8 col-sm-7"
                       id="category"
                       name="branch"
                     >
                       <option selected>Select one</option>
                       <option value="CSE">CSE</option>
                       <option value="ECE">ECE</option>
                       <option value="Both">Both</option>
                     </select>
                   </div>
                   <div class="input-group mb-3">
                     <label
                       for="expire_date"
                       class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label"
                       style="font-weight: 800;">Last Registration Date
                     </label>
                     <input
                       id="expire_date"
                       name="regDate"
                       type="date"
                       class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7"
                       data-large-mode="true"
                     />
                   </div>
                   <div class="input-group mb-3">
                     <label
                       for="expire_date"
                       class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label"
                       style="font-weight: 800;">Number of students required
                     </label>
                     <input
                       id="expire_date"
                       name="totalReq"
                       type="number"
                       class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7"
                       data-large-mode="true"
                     />
                   </div>
                   <div class="input-group mb-3">
                     <label
                       for="expire_date"
                       class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label"
                       style="font-weight: 800;">Interview Date
                     </label>
                     <input
                       id="expire_date"
                       name="intrDate"
                       type="date"
                       class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7"
                       data-large-mode="true"
                     />
                   </div>
                   <div class="input-group mb-3">
                     <label
                       for="stock"
                       class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label"
                       style="font-weight: 800;" >Minimum CGPA
                     </label>
                     <input
                       id="stock"
                       name="cgpa"
                       type="text"
                       class="form-control validate col-xl-9 col-lg-8 col-md-7 col-sm-7"
                     />
                   </div>
                   <div class="input-group mb-3">
                     <label
                       for="stock"
                       class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label"
                       style="font-weight: 800;" >Upload File
                     </label>
                     <input
                       id="stock"
                       name="file"
                       type="file"
                       class="form-control validate col-xl-9 col-lg-8 col-md-7 col-sm-7"
                     />
                   </div>
                   <div class="input-group mb-3">
                     <div class="input-group mb-3 d-flex justify-content-center">
                       <button type="submit" class="btn btn-primary" style="font-weight: 800; width: 100%;">Add</button>
                   </div>
                   
                   </div>
                 </form>
               
                 
                 </div>
               </div>
             </div>
           </div>
         </div>
       </div>
     </div>
     </div>
 
     <script src="js/jquery-3.3.1.min.js"></script>
     <!-- https://jquery.com/download/ -->
     <script src="jquery-ui-datepicker/jquery-ui.min.js"></script>
     <!-- https://jqueryui.com/download/ -->
     <script src="js/bootstrap.min.js"></script>
     <!-- https://getbootstrap.com/ -->
     <script>
       $(function () {
         $("#expire_date").datepicker();
       });
     </script>
   </body>
